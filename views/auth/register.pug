extends ../layout/index


block contents
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real
            span.font-normal Estate
        h2.text-center.text-2xl.font-extrabold=page
    
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5

                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="name") Name
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your name' type="text" name="name")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your email' type="text" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your password' type="text" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="repeat_password") Repeat password
                        input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Repeat password' type="text" name="repeat_password")

                    .flex.items-center
                        a(href="/auth/login" class="text-xs font-bold underline text-gray-600") Already registered?

                    input(class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 rounded-md" type="submit" value="Register")
