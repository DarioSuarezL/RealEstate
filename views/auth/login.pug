extends ../layout/index


block contents
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real
            span.font-normal Estate
        h2.text-center.text-2xl.font-extrabold=page
    
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5

                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your email' type="text" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder='Your password' type="text" name="password")

                    .flex.items-center.justify-between 
                        a(href="/auth/register" class="text-xs font-bold underline text-gray-600") Don't have an account?
                        a(href="/auth/forgot-password" class="text-xs font-bold underline text-gray-600") Forgot password?

                    input(class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 rounded-md" type="submit" value="Login")
